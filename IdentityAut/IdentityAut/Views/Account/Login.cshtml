@{
}
@model UserLoginViewModel;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/AuthoriazedErrors.css" asp-append-version="true" />
</head>
<body>
    <form asp-controller="Account" method="post" asp-action="Login">
        <div>
            <div asp-validation-summary="All" class="field-validation-error"></div>
        </div>

            <div>
                <label asp-for="Email">Почта</label><br />
                <input asp-for="Email"></input>
            </div>
        
        @if (Model is not null)
        {
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl"/>
        }
        <div>
            <label asp-for="Password">Пароль</label><br />
            <input asp-for="Password"></input>
        </div>


        <button type="submit">Войти</button>
        
    </form>

<div>
    <a type="buttom" asp-controller="Account" asp-action="Registration" method="get">Регистрация</a>
</div>

@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
</body>
</html>
