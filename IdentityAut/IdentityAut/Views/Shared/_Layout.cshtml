@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewData["Title"] - IdentityAut</title>
    <link href="@Url.Content("~/css/layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body style="">
<script>
    applyThemeFromCookie();
</script>
<header id="pageHeader">
    <div class="navbar">

        <div class="container-fluid" style="padding: 0; height: 3rem; display: flex; justify-content: space-between;">
            <div style="margin: 0; padding: 0">
                <form href="@Url.Action("GetArticlesByPage", "Article")" class="d-flex" role="search" style="height: 2rem" type="form" method="get">
                    <input name="searchLineRequest" class="form-control me-2" id="article-search" type="search" placeholder="Search" aria-label="Search">
                    <div class="disIfMobile" style="padding: 0; margin: 0">
                        <button class="btn btn-outline-warning " style="color: white; border-color: white" type="submit">Поиск</button>
                    </div>
                </form>
            </div>
            <div style="margin: 0; padding: 0">
                @if (User.HasClaim(ClaimsIdentity.DefaultRoleClaimType, "Admin"))
                {
                    <a type="button" class="navbar-btn" asp-controller="Admin" asp-action="GetAdminPage">Админ</a>
                }
                @if (User.HasClaim(ClaimsIdentity.DefaultRoleClaimType, "User"))
                {
                    <a type="button" class="navbar-btn" asp-controller="Settings" asp-action="GetInfoConfig">Настройки</a>
                    <a type="button" id="logout-btn" class="navbar-btn" asp-controller="Account" asp-action="LogOut">Выйти</a>
                }
                else
                {
                    <a type="button" class="navbar-btn" asp-controller="Account" asp-action="Login">Вход</a>
                }
            </div>
        </div>


    </div>
</header>
<article id="mainArticle">
    @RenderBody()
</article>
<nav id="mainNav" class="disIfMobile">
    <div class="menu">
        <a class="navbar-brand pct" style="margin-right: 0rem;" asp-controller="Article" asp-action="GetArticlesByPage">
            <img src="/images/Log.png" alt="Bootstrap" style="width: 40%">
        </a>

        <a type="button" class="tag-menu-btn" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "" })">Новости</a>
        <a type="button" class="tag-menu-btn" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "авто" })">Авто</a>
        <a type="button" class="tag-menu-btn" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "животные" })">Животные</a>
        <a type="button" class="tag-menu-btn" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "лайфстайл" })">Лайфстайл</a>
        <a type="button" class="tag-menu-btn" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "позновательное" })">Позновательное</a>
        <a type="button" class="tag-menu-btn" asp-controller="Admin" asp-action="UserList">Предложить новость</a>
    </div>
</nav>
</body>
</html>
<script src="/lib/bootstrap-autocomplete/autocomplete.js"></script>
<script src="/js/article-search.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
