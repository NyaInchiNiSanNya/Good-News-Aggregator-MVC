@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewData["Title"] - IdentityAut</title>
    <link href="@Url.Content("~/css/Layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body id="theme">
    <header id="pageHeader">
        <div class="ScrollSortHelperBlock">

            <div class="container-fluid" style="padding: 0; height: 2rem; display: flex; justify-content: space-between;">
                <div style="margin: 0;padding: 0">
                    <form href="@Url.Action("GetArticlesByPage", "Article")" class="d-flex" role="search" style="height: 2rem" type="form" method="get">
                        <input name="searchLineRequest" class="form-control me-2" id="article-search" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-warning " style="color: white;border-color: white" type="submit">Поиск</button>
                    </form>
                </div>
                <div style="margin: 0;padding: 0">
                    <a type="button" class="HelperBlockbuttom" asp-controller="Admin" asp-action="UserList">Админ</a>
                    <a type="button" class="HelperBlockbuttom" asp-controller="Account" asp-action="Login">Вход</a>
                    <a type="button" class="HelperBlockbuttom" asp-controller="Settings" asp-action="GetInfoConfig">Настройки</a>
                    <a type="button" class="HelperBlockbuttom" asp-controller="Account" asp-action="LogOut">Выйти</a>
                </div>
            </div>


        </div>
    </header>
    <article id="mainArticle">
        @RenderBody()
    </article>
    <nav id="mainNav" class="disIfMobile">
        <div class="menu">
            <a class="navbar-brand pct" style="margin-right: 0rem;" asp-controller="Article" asp-action="GetArticlesByPage">
                <img src="/images/Log.png" alt="Bootstrap" width="40%">
            </a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "" })">Новости</a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "Спорт" })">Спорт</a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "Экономика" })">Экономика</a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "Наука" })">Наука</a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "Политика" })">Политика</a>
            <a type="button" class="buttom" href="@Url.Action("GetArticlesByPage", "Article", new { tag = "Общество" })">Общество</a>
            <a type="button" class="buttom" asp-controller="Admin" asp-action="UserList">Предложить новость</a>
        </div>
    </nav>
</body>
</html>
<script src="/lib/bootstrap-autocomplete/autocomplete.js"></script>
<script src="/js/article-search.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
